<h2><%= @cocktail.name %></h2>
<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Delectus hic ad quidem laboriosam, libero perferendis. Quaerat harum, possimus et debitis eligendi amet! Reiciendis consequatur accusamus veniam praesentium atque minima vel?</p>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "🗑", dose_path(dose), method: :delete %> </li>
  <% end %>
</ul>
<%#= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<h3>Add a dose</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, input_html: { class: 'select2' } %>
  <%= f.submit %>
<% end %>

<h3>Add a review</h3>
<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :description %>
  <%= f.input :rating, collection: 1..5, as: :radio_buttons %>
  <%= f.submit %>
<% end %>

<h3>They loved it</h3>
<ul>
  <% @cocktail.reviews.each do |review| %>
    <li><%= review.description %> <%= "⭐️"*review.rating %></li>
  <% end %>
</ul>



<%= link_to "Back to cocktails", cocktails_path %>
