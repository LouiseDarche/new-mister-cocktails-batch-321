<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('<%= cl_image_path('man-night-bar-barman-110472.jpg') %>')">
  <h1>Bored of traditional cocktails?<br>Create your own!</h1>
  <%= link_to "Start the experience", new_cocktail_path, class: "btn-main" %>
</div>
<div class="container" style="cursor: url(<%= image_path('drink.png') %>), auto">
  <div class="container-title">
    <h2 class="purple-title">Discover the new age of mixology</h2>
  </div>
  <div class=cards>
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path cocktail.photo.key, height: 200, width: 200, crop: :fill %>')">
          <h3><%= cocktail.name %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex-center">
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn-link"  %>
  </div>

</div>

